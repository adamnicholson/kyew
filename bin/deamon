#!/usr/bin/php
<?php

declare(ticks=1);

function start($daemon) {
    return exec('php ' . __DIR__ . '/' . $daemon . ' > /dev/null 2>&1 & echo $!; ', $output);
}
function kill($pid) {
    exec('kill ' . $pid, $output);
}
function info($message) {
    echo $message . PHP_EOL;
}
function shutdown($signal = null)
{
    global $workers;

    info('');
    info('Shutting down...');
    $i = 0;
    foreach ($workers as $worker) {
        kill($worker);
        unset($workers[$worker]);
        $i++;
    }
    info("\tSuccessfully shut down $i workers");
    exit;
}

// Shutdown handler
pcntl_signal(SIGTERM, "shutdown");
pcntl_signal(SIGINT, "shutdown");

// Start the workers
$workers = [];
$requestedWorkers = (int) isset($_SERVER['argv'][1]) ? $_SERVER['argv'][1] : 2;
foreach (range(1, $requestedWorkers) as $i) {
    $pid = start('worker');
    $workers[$pid] = $pid;
}

// Loop
info('Deamon started with ' . $requestedWorkers . ' workers: [' . implode(',', $workers) . ']');
info('');
info('Use Ctrl+C to quit');
while (true) {
    usleep(500);
}
